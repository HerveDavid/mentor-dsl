use std::str::FromStr;

grammar;

pub Expr: i32 = {
    <l:Expr> "+" <r:Term> => l + r,
    <l:Expr> "-" <r:Term> => l - r,
    Term,
};

Term: i32 = {
    <l:Term> "*" <r:Factor> => l * r,
    <l:Term> "/" <r:Factor> => l / r,
    Factor,
};

Factor: i32 = {
    <n:Num> => n,
    "(" <e:Expr> ")" => e,
};

Num: i32 = <s:r"[0-9]+"> => i32::from_str(s).unwrap();
